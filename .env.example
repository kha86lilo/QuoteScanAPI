# ============================================
# AI SERVICE CONFIGURATION
# ============================================

# Select which AI provider to use for email parsing
# Options: gemini, claude, chatgpt (or openai)
# Default: chatgpt
AI_PROVIDER=chatgpt

# Maximum characters to process from email body (prevents token limit issues)
MAX_BODY_CHARS=800000

# ============================================
# GEMINI (Google) CONFIGURATION
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-preview-05-20

# ============================================
# CLAUDE (Anthropic) CONFIGURATION
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514

# ============================================
# CHATGPT (OpenAI) CONFIGURATION
# ============================================
GPT_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ============================================
# MICROSOFT GRAPH API CONFIGURATION
# ============================================
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_USER_EMAIL=your_email@domain.com

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shipping_quotes
DB_USER=postgres
DB_PASSWORD=your_password

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development
